<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="General Settings">
        <setting id="logging" type="bool" label="Enable logging for Testing" default="false"/>
        <setting id="populate_by" type="bool" label="Use Smart Playlist to Filter Shows" default="false"/>
        <setting id="select_pl" type="enum" label="Playlist Selection Method" enable="eq(-1,true)" lvalues="32088|32078"/>
        <setting id="file" type="file" label="Select Playlist" enable="eq(-1,1) + eq(-2,true)" value="special://videoplaylists/"/>

        <setting type="lsep" label="Primary Function"/>
        <setting id="primary_function" type="enum" label="" lvalues="32073|32072|32088"/>
    </category>
    <category label="Player Options">
        <setting id="length" label="32010" type="slider" default="5" range="1,1,50" option="int" />
        <setting id="multipleshows" type="bool" label="32011" default="false"/>
        <setting id="premieres" type="bool" label="32012" default="false"/>
        <setting id="resume_partials" type="bool" label="Begin partially watched episodes from their resume point" default="false"/>
        <setting id="notify" type="bool" label="Display episode details when played"  default="true"/>
        <setting id="movies" type="bool" label="Include unwatched movies" default="false"/>
        <setting id="movieweight" type="slider" label="Weighting (max = parity with TV Shows) " enable="eq(-1,true)" option='float' range="0,0.1,1" subsetting="true" default="0"/>
    </category>
    <category label="List Options">
        <setting id="limitshows" type="bool" label="Limit the number of shows" default="false"/>
        <setting id="window_length" label="Number of Shows to display" enable="eq(-1,true)" type="slider" default="10" range="1,1,30" option="int" />
    </category>
    <category label="Other Settings">
        <setting id="nextprompt" type="bool" label="Tell me when the next episode is available" default="true"/>
        <setting id="promptduration" label="Prompt duration (max = do not close)" type="slider"
            enable="eq(-1,true)" subsetting="true" default="10" range="5,5,60" option="int" />

        <setting id="first_run" type="bool" default="true" visible="false"/>
        <setting id="users_spl" type="text" visible="false" default='none'/>
    </category>
</settings>
