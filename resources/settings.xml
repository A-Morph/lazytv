<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <category label="LazyTV Settings">

        <setting type="lsep" label="Use Smart Playlist as Filter"/>
        <setting id="populate_by" type="bool" label="" default="false"/>
        <setting label="Select Playlist" type="action" enable="eq(-1,true)" action="RunScript($CWD/set_pl.py)"/>

        <setting type="lsep" label="Assign Primary Function"/>               
        <setting id="primary_function" type="enum" label="" lvalues="32072|32073|32088"/>

        <setting type="lsep" label="Random Playlist"/>
        <setting id="length" label="32010" type="slider" enable="!eq(-2,2)" subsetting="true" default="5" range="1,1,20" option="int" />
        <setting id="multipleshows" type="bool" label="32011" enable="!eq(-3,2)" default="false"/>
        <setting id="premieres" type="bool" label="32012" enable="!eq(-4,2)" default="false"/>
        <setting id="resume_partials" type="bool" label="32212" enable="!eq(-5,2)" default="true"/>
        <setting id="notify" type="bool" label="32211" enable="!eq(-6,2)" default="true"/>

        <setting type="lsep" label="List shows"/>        
        <setting id="sort_list_by" type="enum" label="32079" enable="eq(-8,1)" lvalues="32080|32081"/>

        <setting id="first_run" type="bool" default="true" visible="false"/>
        <setting id="users_spl" type="text" visible="false" default='none'/>

    </category>
</settings>